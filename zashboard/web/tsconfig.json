{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "types": ["svelte"]
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
    "svelte.config.js",
    "vite.config.mjs"
  ],
  "exclude": ["node_modules", "dist"]
}
